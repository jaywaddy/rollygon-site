{% from "./menu.njk" import menu %}
{% from "../icons/logo.njk" import logo %}
<header class="header content-wrapper">
    {{menu(lastUpdate)}}
    <a class="header__logo" href="/">{{logo("var(--clr-primary-400)")}}</a>
    {% if isUpdate %}
        <a class="header__link" href="/builds">Builds</a>
        <span class="header__link">/</span>
        <a class="header__link" href="/builds/{{buildName | slugify}}/">{{buildName}}</a>
        <span class="header__link">/</span>
        <a class="link--title" href="{{page.url}}">{{title}}</a>
    {% elif isBuild %}
        <a class="header__link" href="/builds">Builds</a>
        <span class="header__link">/</span>
        <a class="link--title" href="{{page.url}}">{{title}}</a>
    {% elif isBlogPost %}
        <a class="header__link" href="/blog">Blog</a>
        <span class="header__link">/</span>
        <a class="link--title" href="{{page.url}}/">{{title}}</a>
    {% else %}
        <a class="link--title" href="{{page.url}}">{{title}}</a>
    {% endif %}
</header>
