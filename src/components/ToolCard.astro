---
import Icon from "@/ui/Icon.astro";
import Button from "@/ui/Button.astro";
import type { CollectionEntry } from "astro:content";
import Badge from "./ui/Badge.astro";

interface Props {
	tool: CollectionEntry<"tools">;
}

const { tool } = Astro.props;
const { title, href, price } = tool.data;
---

<div class="flex items-center justify-between border-lg shadow-lg w-full p-4 bg-white">
	<div class="flex items-center gap-4">
		<Icon name="tool" size="32" />
		<h3 class="flex justify-left truncate w-full">
			{title}
		</h3>
		<Badge label={price} />
	</div>
	<div class="flex gap-2">
		<Button label="View details" href={"/tools/" + tool.slug} />
		<Button label="Download" {href} icon="download" primary />
	</div>
</div>
