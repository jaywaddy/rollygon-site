---
import { Color, setStyles, type ColorName } from "@/scripts/interface";

interface Props {
	color: ColorName;
	pattern: "1" | "2";
}

const { color, pattern } = Astro.props;
---

{
	pattern === "1" && (
		<svg
			width="18"
			height="196"
			viewBox="0 0 18 196"
			fill="none"
			xmlns="http://www.w3.org/2000/svg"
			style={setStyles("siding", Color[color])}
		>
			<path d="M18 0H16C16 33.8765 0 58.084 0 98H2C2 58.084 18 33.8765 18 0Z" fill="black" />
			<path
				d="M18 98V0C18 16.244 14.3212 30.2648 10.4916 44.8603C6.33465 60.7035 2 77.2239 2 98H18Z"
				fill="var(--siding-color)"
			/>
			<path
				d="M18 196H16C16 162.123 0 137.916 0 98H2C2 137.916 18 162.123 18 196Z"
				fill="black"
			/>
			<path
				d="M18 98V196C18 179.756 14.3212 165.735 10.4916 151.14C6.33465 135.296 2 118.776 2 98H18Z"
				fill="var(--siding-color)"
			/>
		</svg>
	)
}
{
	pattern === "2" && (
		<svg
			width="18"
			height="196"
			viewBox="0 0 18 196"
			fill="none"
			xmlns="http://www.w3.org/2000/svg"
			style={setStyles("siding", Color[color])}
		>
			<path
				d="M0 98H2C2 131.877 18 156.084 18 196H16C16 156.084 0 131.877 0 98Z"
				fill="black"
			/>
			<path
				d="M0 196V98C0 114.244 3.6788 128.265 7.50839 142.86C11.6654 158.704 16 175.224 16 196H0Z"
				fill="var(--siding-color)"
			/>
			<path d="M0 98H2C2 64.1235 18 39.916 18 0H16C16 39.916 0 64.1235 0 98Z" fill="black" />
			<path
				d="M0 0V98C0 81.756 3.6788 67.7352 7.50839 53.1397C11.6654 37.2965 16 20.7761 16 0H0Z"
				fill="var(--siding-color)"
			/>
		</svg>
	)
}
