---
import Button from "@/ui/Button.astro";
import Input from "@/ui/Input.astro";
import Textarea from "@/ui/Textarea.astro";
import AboutSection from "@/layout/AboutSection.astro";
import Card from "../Card.astro";
---

<section
	class="background-marquee flex border-top border-bottom bg-blue"
	style={{
		"--bg": "var(--color-blue)",
		"--bg-url": "var(--bg-5)",
	}}
>
	<div class="wrapper flex gap-16 py-16">
		<div class="marquee-content flex flex-col gap-8">
			<Card title="What should I build next?">
				<p>
					If you have an idea that could improve my workflow, I'd love to hear it. Let's
					work together and build better custom and high quality coaster models!
				</p>
			</Card>
			<form action="" method="POST" class="grid gap-2 w-full">
				<Input label="Name (@handle:platform)*" type="text" id="contact-name" required />
				<Input label="Email*" type="email" id="contact-email" required />
				<Textarea label="Message*" id="contact-meessage" />
				<div class="mt-6">
					<Button label="Start a conversation" icon="send" submit primary />
				</div>
			</form>
		</div>
		<AboutSection />
	</div>
</section>
