---
import Image from "@/ui/Image.astro";
import InfoBanner from "@/ui/InfoBanner.astro";
import Icon from "@/ui/Icon.astro";
import Link from "@/ui/Link.astro";


---

<section class="flex flex-col gap-8 w-1/2">
    <Image size="md" shape="round" aspect="square" placeholder />
    <InfoBanner />
    <p>I'm Rolly (rhymes with "jolly"), and I make roller coasters out of polygons.</p>
    <div class="flex flex-col gap-1">
        <p class="flex gap-2 items-center"><Icon name="compass" />Sacramento, CA</p>
        <Link label="example@email.com" href="mailto:" icon="email" underline />
    </div> 
</section>