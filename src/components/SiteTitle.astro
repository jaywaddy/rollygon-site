---
import Icon from "@/ui/Icon.astro";
import { Color, Pattern, setStyles } from "@/scripts/interface";
import type { HTML } from "@/scripts/constants";

interface Props extends HTML {}

const { class: className } = Astro.props;
---

<a
	aria-label="Rollygon"
	href="/"
	class:list={["flex items-center gap-2", className]}
	style={setStyles("logo", Color.lime, Pattern["2"]) + "--color-shadow: var(--color-black)"}
>
	<span
		class="site-logo flex items-center justify-center bg-[var(--logo-color)] border-2 shadow-sm rounded-full aspect-1/1 w-12"
	>
		<Icon name="logo" size="28" />
	</span>
	<span class="font-[Benz_Grotesk] text-[1.5em]">Rollygon</span>
</a>

<style>
	[aria-label="Rollygon"] {
		&:hover .site-logo,
		&:focus .sitelogo {
			position: relative;
			overflow: hidden;

			&::before {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background-image: var(--logo-pattern);
				opacity: 0.1;

				transform: scale(2) rotate(1deg);
				animation: button-marquee 10s linear infinite;
				content: "";
			}
		}
	}
</style>
