---
import ArrowLeftIcon from '@/icons/ArrowLeftIcon.astro';
import ArrowRightIcon from '@/icons/ArrowRightIcon.astro';
import ArrowUpRightIcon from '@/icons/ArrowUpRightIcon.astro';
import CalendarIcon from '@/icons/CalendarIcon.astro';
import ClockIcon from '@/icons/ClockIcon.astro';
import CompassIcon from '@/icons/CompassIcon.astro';
import DownloadIcon from '@/icons/DownloadIcon.astro';
import EmailIcon from '@/icons/EmailIcon.astro';
import ExternalLinkIcon from '@/icons/ExternalLinkIcon.astro';
import ImageIcon from '@/icons/ImageIcon.astro';
import MenuCloseIcon from '@/icons/MenuCloseIcon.astro';
import MenuHamburgerIcon from '@/icons/MenuHamburgerIcon.astro';
import MenuHorizontalIcon from '@/icons/MenuHorizontalIcon.astro';
import MenuVerticalIcon from '@/icons/MenuVerticalIcon.astro';
import NetworkIcon from '@/icons/NetworkIcon.astro';
import NgonIcon from '@/icons/NgonIcon.astro';
import PackageIcon from '@/icons/PackageIcon.astro';
import QuadIcon from '@/icons/QuadIcon.astro';
import RssIcon from '@/icons/RssIcon.astro';
import SearchIcon from '@/icons/SearchIcon.astro';
import SendIcon from '@/icons/SendIcon.astro';
import TollIcon from '@/icons/TollIcon.astro';
import UserIcon from '@/icons/UserIcon.astro';
import VertexIcon from '@/icons/VertexIcon.astro';
import GumroadIcon from '@/icons/GumroadIcon.astro';
import YouTubeIcon from '@/icons/YouTubeIcon.astro';
import Sketchfab from '@/icons/SketchfabIcon.astro';
import BlueskyIcon from '@/icons/BlueskyIcon.astro';
import LogoIcon from '@/icons/LogoIcon.astro';

export type IconName = (
    | "arrow-left"
    | "arrow-right"
    | "arrow-up-right"
    | "download"
    | "external-link"
    | "email"
    | "send"
    | "compass"
    | "network"
    | "bundle"
    | "tool"
    | "menu-hamburger"
    | "menu-meatball-v"
    | "menu-meatball-h"
    | "menu-close"
    | "rss"
    | "clock"
    | "calendar"
    | "search"
    | "logo"
    | "image"
    | "user"
    | "vertex"
    | "tri"
    | "quad"
    | "ngon"
    | "bluesky"
    | "gumroad"
    | "sketchfab"
    | "youtube"
    | "none"
);

interface Props {
    name: IconName;
    size?: string;
    color?: string;
    stroke?: string;
}

const { name, size = "20", color = "var(--color-text)", stroke } = Astro.props;

function clacStroke(stroke: string | undefined): string {
    const baseWidth = 2;
    const baseSize = 20;

    if (stroke) {
        return stroke;
    }

    return (baseWidth / (Number(size) / baseSize)).toString();
}
---

{name === "arrow-left" && <ArrowLeftIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "arrow-right" && <ArrowRightIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "arrow-up-right" && <ArrowUpRightIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "download" && <DownloadIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "external-link" && <ExternalLinkIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "email" && <EmailIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "send" && <SendIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "compass" && <CompassIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "network" && <NetworkIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "bundle" && <PackageIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "tool" && <TollIcon {color} {size} stroke={clacStroke(stroke)} stroke={clacStroke(stroke)} />}
{name === "menu-hamburger" && <MenuHamburgerIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "menu-close" && <MenuCloseIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "menu-meatball-v" && <MenuVerticalIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "menu-meatball-h" && <MenuHorizontalIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "rss" && <RssIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "clock" && <ClockIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "calendar" && <CalendarIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "search" && <SearchIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "logo" && <LogoIcon {color} {size} />}
{name === "image" && <ImageIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "user" && <UserIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "vertex" && <VertexIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "quad" && <QuadIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "ngon" && <NgonIcon {color} {size} stroke={clacStroke(stroke)} />}
{name === "bluesky" && <BlueskyIcon {color} {size} />}
{name === "gumroad" && <GumroadIcon {color} {size} />}
{name === "sketchfab" && <Sketchfab {color} {size} />}
{name === "youtube" && <YouTubeIcon {color} {size} />}
{name === "none" && null}
