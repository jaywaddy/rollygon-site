---
import ArrowLeftIcon from '@/icons/ArrowLeftIcon.astro';
import ArrowRightIcon from '@/icons/ArrowRightIcon.astro';
import ArrowUpRightIcon from '@/icons/ArrowUpRightIcon.astro';
import CalendarIcon from '@/icons/CalendarIcon.astro';
import ClockIcon from '@/icons/ClockIcon.astro';
import CompassIcon from '@/icons/CompassIcon.astro';
import DownloadIcon from '@/icons/DownloadIcon.astro';
import EmailIcon from '@/icons/EmailIcon.astro';
import ExternalLinkIcon from '@/icons/ExternalLinkIcon.astro';
import ImageIcon from '@/icons/ImageIcon.astro';
import MenuCloseIcon from '@/icons/MenuCloseIcon.astro';
import MenuHamburgerIcon from '@/icons/MenuHamburgerIcon.astro';
import MenuHorizontalIcon from '@/icons/MenuHorizontalIcon.astro';
import MenuVerticalIcon from '@/icons/MenuVerticalIcon.astro';
import NetworkIcon from '@/icons/NetworkIcon.astro';
import NgonIcon from '@/icons/NgonIcon.astro';
import PackageIcon from '@/icons/PackageIcon.astro';
import QuadIcon from '@/icons/QuadIcon.astro';
import RssIcon from '@/icons/RssIcon.astro';
import SearchIcon from '@/icons/SearchIcon.astro';
import SendIcon from '@/icons/SendIcon.astro';
import TollIcon from '@/icons/TollIcon.astro';
import UserIcon from '@/icons/UserIcon.astro';
import VertexIcon from '@/icons/VertexIcon.astro';
import GumroadIcon from '@/icons/GumroadIcon.astro';
import YouTubeIcon from '@/icons/YouTubeIcon.astro';
import Sketchfab from '@/icons/SketchfabIcon.astro';
import BlueskyIcon from '@/icons/BlueskyIcon.astro';

export type IconName = (
    | "arrow-left"
    | "arrow-right"
    | "arrow-up-right"
    | "download"
    | "external-link"
    | "email"
    | "send"
    | "compass"
    | "network"
    | "bundle"
    | "tool"
    | "menu-hamburger"
    | "menu-meatball-v"
    | "menu-meatball-h"
    | "menu-close"
    | "rss"
    | "clock"
    | "calendar"
    | "search"
    | "image"
    | "user"
    | "vertex"
    | "tri"
    | "quad"
    | "ngon"
    | "bluesky"
    | "gumroad"
    | "sketchfab"
    | "youtube"
    | "none"
);

interface Props {
    name: IconName;
    size?: string;
    color?: string;
}

const { name, size = "16px", color = "var(--color-text)" } = Astro.props;
---
{name === "arrow-left" && <ArrowLeftIcon color={color} />}
{name === "arrow-right" && <ArrowRightIcon color={color} />}
{name === "arrow-up-right" && <ArrowUpRightIcon color={color} />}
{name === "download" && <DownloadIcon color={color} />}
{name === "external-link" && <ExternalLinkIcon color={color} />}
{name === "email" && <EmailIcon color={color} />}
{name === "send" && <SendIcon color={color} />}
{name === "compass" && <CompassIcon color={color} />}
{name === "network" && <NetworkIcon color={color} />}
{name === "bundle" && <PackageIcon color={color} />}
{name === "tool" && <TollIcon color={color} />}
{name === "menu-hamburger" && <MenuHamburgerIcon color={color} />}
{name === "menu-close" && <MenuCloseIcon color={color} />}
{name === "menu-meatball-v" && <MenuVerticalIcon color={color} />}
{name === "menu-meatball-h" && <MenuHorizontalIcon color={color} />}
{name === "rss" && <RssIcon color={color} />}
{name === "clock" && <ClockIcon color={color} />}
{name === "calendar" && <CalendarIcon color={color} />}
{name === "search" && <SearchIcon color={color} />}
{name === "image" && <ImageIcon color={color} />}
{name === "user" && <UserIcon color={color} />}
{name === "vertex" && <VertexIcon color={color} />}
{name === "quad" && <QuadIcon color={color} />}
{name === "ngon" && <NgonIcon color={color} />}
{name === "bluesky" && <BlueskyIcon {size} color={color} />}
{name === "gumroad" && <GumroadIcon {size} color={color} />}
{name === "sketchfab" && <Sketchfab {size} color={color} />}
{name === "youtube" && <YouTubeIcon {size} color={color} />}

