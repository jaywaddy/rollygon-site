---
// General Icons
import ArrowLeftIcon from "@/icons/ArrowLeftIcon.astro";
import ArrowRightIcon from "@/icons/ArrowRightIcon.astro";
import DownloadIcon from "@/icons/DownloadIcon.astro";
import ExternalLinkIcon from "@/icons/ExternalLinkIcon.astro";
import ImageIcon from "@/icons/ImageIcon.astro";
import LogoIcon from "@/icons/LogoIcon.astro";
import Ngons from "@/icons/Ngons.astro";
import Quads from "@/icons/Quads.astro";
import SearchIcon from "@/icons/SearchIcon.astro";
import SendIcon from "@/icons/SendIcon.astro";
import Triangles from "@/icons/Triangles.astro";
import UserIcon from "@/icons/UserIcon.astro";
import Verticies from "@/icons/Verticies.astro";

// Social Icons
import GumroadIcon from "@/icons/GumroadIcon.astro";
import YouTubeIcon from "@/icons/YouTubeIcon.astro";
import Sketchfab from "@/icons/SketchfabIcon.astro";
import BlueskyIcon from "@/icons/BlueskyIcon.astro";

// Tool Icons
import Array from "@/icons/Array.astro";
import CurveDeform from "@/icons/CurveDeform.astro";
import FixedCurveRadius from "@/icons/FixedCurveRadius.astro";
import FloatSwitch from "@/icons/FloatSwitch.astro";
import GeometrySwitch from "@/icons/GeometrySwitch.astro";
import IntegerSwitch from "@/icons/IntegerSwitch.astro";
import MoveToUnit from "@/icons/MoveToUnit.astro";
import ObjectSwitch from "@/icons/ObjectSwitch.astro";
import RotationSwitch from "@/icons/RotationSwitch.astro";
import SelectEdgeLoops from "@/icons/SelectEdgeLoops.astro";
import SupportGenerator from "@/icons/SupportGenerator.astro";
import TrackGenerator from "@/icons/TrackGenerator.astro";
import UtilityNodes from "@/icons/UtilityNodes.astro";
import VectorSwitch from "@/icons/VectorSwitch.astro";

export const GENERAL_ICONS: Array<string> = [
	"arrow-left",
	"arrow-right",
	"download",
	"external-link",
	"image",
	"logo",
	"ngons",
	"quads",
	"search",
	"send",
	"tris",
	"user",
	"verts",
];

export const SOCIAL_ICONS: Array<string> = ["bluesky", "gumroad", "sketchfab", "youtube"];

export const TOOL_ICONS: Array<string> = [
	"array",
	"curve-deform",
	"fixed-curve-radius",
	"float-switch",
	"geometry-switch",
	"integer-switch",
	"move-to-unit",
	"object-switch",
	"rotation-switch",
	"select-edge-loops",
	"support-generator",
	"track-generator",
	"utility-nodes",
	"vector-switch",
];

export const ICON_NAMES: Array<string> = [...GENERAL_ICONS, ...SOCIAL_ICONS, ...TOOL_ICONS];

interface Props {
	name: (typeof ICON_NAMES)[number];
	size?: string;
	color?: string;
}

const { name, size = "16", color = "var(--color-black)" } = Astro.props;
---

<svg class="w-fit" width={size} height={size} viewBox="0 0 32 32" fill="none">
	<title>{name}</title>

	{name === "arrow-left" && <ArrowLeftIcon {color} />}
	{name === "arrow-right" && <ArrowRightIcon {color} />}
	{name === "download" && <DownloadIcon {color} />}
	{name === "external-link" && <ExternalLinkIcon {color} />}
	{name === "image" && <ImageIcon {color} />}
	{name === "logo" && <LogoIcon {color} />}
	{name === "ngons" && <Ngons {color} />}
	{name === "quads" && <Quads {color} />}
	{name === "search" && <SearchIcon {color} />}
	{name === "send" && <SendIcon {color} />}
	{name === "tris" && <Triangles {color} />}
	{name === "user" && <UserIcon {color} />}
	{name === "verts" && <Verticies {color} />}

	{name === "bluesky" && <BlueskyIcon {color} />}
	{name === "gumroad" && <GumroadIcon {color} />}
	{name === "sketchfab" && <Sketchfab {color} />}
	{name === "youtube" && <YouTubeIcon {color} />}

	{name === "array" && <Array {color} />}
	{name === "curve-deform" && <CurveDeform {color} />}
	{name === "fixed-curve-radius" && <FixedCurveRadius {color} />}
	{name === "float-switch" && <FloatSwitch {color} />}
	{name === "geometry-switch" && <GeometrySwitch {color} />}
	{name === "integer-switch" && <IntegerSwitch {color} />}
	{name === "move-to-unit" && <MoveToUnit {color} />}
	{name === "object-switch" && <ObjectSwitch {color} />}
	{name === "rotation-switch" && <RotationSwitch {color} />}
	{name === "select-edge-loops" && <SelectEdgeLoops {color} />}
	{name === "support-generator" && <SupportGenerator {color} />}
	{name === "track-generator" && <TrackGenerator {color} />}
	{name === "utility-nodes" && <UtilityNodes {color} />}
	{name === "vector-switch" && <VectorSwitch {color} />}
</svg>
