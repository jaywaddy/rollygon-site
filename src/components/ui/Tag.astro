---
import {
    type Color,
    Red,
    Orange,
    Yellow,
    Green,
    Blue,
    Purple,
    Fuschia
} from "@/scripts/colors";

interface Props {
    label: string;
    color?: Color;
}

const { label, color } = Astro.props;
---

<small
data-tag
class="bg-[var(--bg)] rounded-sm border border-[var(--fg)] text-[var(--fg)] py-[2px] px-2 w-fit"
style={(
    color === undefined ? ""
    : color === "red" ? Red
    : color === "orange" ? Orange
    : color === "yellow" ? Yellow
    : color === "green" ? Green
    : color === "blue" ? Blue
    : color === "purple" ? Purple
    : color === "fuschia" && Fuschia
)}>
    {label}
</small>

<style>
[data-tag]:hover {
    background-color: var(--bg-hover);
    color: var(--fg-hover);
    border-color: var(--fg-hover);
}
</style>
