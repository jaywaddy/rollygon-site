---
interface Props {
	label: string;
	id?: string;
	placeholder?: string;
	value?: string;
	required?: boolean;
}

const { label, id, placeholder, value, required = false } = Astro.props;
---

<label for={id} class="grid gap-2">
	<small>{label}*</small>
	<textarea
		name="Message"
		{id}
		{placeholder}
		{value}
		class="border-lg shadow-lg bg-white px-3 py-2"
		{required}></textarea>
</label>
