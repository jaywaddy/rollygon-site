---
import Link from "./Link.astro";
import type { MarkdownHeading } from "astro";

interface Props {
	headings: Array<MarkdownHeading>;
	compact?: boolean;
}

const { headings, compact } = Astro.props;
---

<nav class="sticky flex flex-col gap-8">
	{!compact && <hr />}
	{compact ? <span class="heading-xs">Table of Contents</span> : <h2>Table of Contents</h2>}
	<ol class="flex flex-col gap-4 list-decimal">
		{
			headings.map((heading) =>
				heading.depth > 2 ? (
					<ol class="list-disc">
						<li class="ml-8">
							<Link label={heading.text} href={"#" + heading.slug} />
						</li>
					</ol>
				) : (
					<li class="ml-4">
						<Link label={heading.text} href={"#" + heading.slug} />
					</li>
				),
			)
		}
	</ol>
	{!compact && <hr />}
</nav>
