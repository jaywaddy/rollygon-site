---
import { type ColorName, Color, setStyles } from "@/scripts/interface";

interface Props {
	label: string;
	color?: ColorName;
}

const { label, color = "neutral" } = Astro.props;
---

<small
	data-badge
	class="border-sm bg-[var(--badge-color)] rounded-sm py-[2px] px-2 w-fit"
	style={setStyles("badge", Color[color])}
>
	<strong class="text-nowrap">{label}</strong>
</small>
