---
type BadgeColor =
    | "red"
    | "orange"
    | "yellow"
    | "green"
    | "blue"
    | "purple"
    | "fuschia"
    | "disabled";

interface Props {
    label: string;
    color: BadgeColor;
}

const { label, color } = Astro.props;

function calcColor(color: BadgeColor): string {
    return `--badge-bg: var(--color-${color}-200)`;
}
---

<small
class="bg-[var(--badge-bg)] rounded-sm py-[2px] px-2 w-fit"
style={calcColor(color)}
>
    {label}
</small>
