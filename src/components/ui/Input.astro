---
interface Props {
	label: string;
	name?: string;
	id: string;
	type: astroHTML.JSX.HTMLInputTypeAttribute;
	placeholder?: string;
	value?: string;
	required?: boolean;
}

const { label, name = label, id, type, placeholder, value, required = false } = Astro.props;
---

<label for={id} class="flex flex-col gap-1">
	<small>{label}{required && "*"}</small>
	<input
		{name}
		{id}
		{type}
		{placeholder}
		{value}
		{required}
		class="bg-white border-sm px-3 py-2"
	/>
</label>
