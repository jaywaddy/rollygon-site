---
interface Props {
	title: string;
	color?: string;
	pattern?: string;
}

const { title, color, pattern } = Astro.props;
---

<div class="flex flex-col bg-surface-primary border-lg shadow-lg w-full h-fit">
	<h2 class="m-2 p-8">{title}</h2>
	<div class="flex flex-col gap-8 p-8 border-top">
		<slot />
	</div>
</div>

<style>
	h2 {
		position: relative;
		z-index: 0;
		text-shadow:
			0 0 1em var(--color-surface-primary),
			0 0 1em var(--color-surface-primary),
			0 0 1em var(--color-surface-primary);

		&::before {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			content: "";
			background-image: url("/backgrounds/bg-5.png");
			opacity: 0.1;
			z-index: -1;
		}
	}
</style>
