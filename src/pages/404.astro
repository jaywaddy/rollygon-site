---
import Button from "@/components/ui/Button.astro";
import SiteLayout from "@/layouts/SiteLayout.astro";
---

<SiteLayout pageTitle="404" color="neutral" pattern="7">
	<div class="card-lg">
		<h1>404 - Page Not Found.</h1>
		<p class="heading-sub w-2/3">
			Did you type the URL correctly? Or maybe try heading back to the home page.
		</p>
		<Button label="Head back home" href="/" />
	</div>
</SiteLayout>
