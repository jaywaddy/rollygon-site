---
import ContentCard from "@/components/ContentCard.astro";
import PageTitle from "@/components/layout/PageTitle.astro";
import SearchBar from "@/components/SearchBar.astro";
import { ALL_TOOLS } from "@/content/config";
import SiteLayout from "@/layouts/SiteLayout.astro";

const searchTags = [
	{ label: "Essentials", href: "/tags/essential" },
	{ label: "Track Gens", href: "/tags/track-gen" },
	{ label: "Support Gens", href: "/tags/support-gen" },
];
---

<SiteLayout pageTitle="Tools" pattern="5">
	<PageTitle heading="Tools" />
	<SearchBar {searchTags} />
	<section class="flex flex-col gap-16">
		<div class="flex flex-col gap-8">
			<h2>All tools</h2>
			<div class="flex flex-col gap-8">
				{ALL_TOOLS.map((tool) => <ContentCard type="tool" content={tool} />)}
			</div>
		</div>
	</section>
</SiteLayout>
