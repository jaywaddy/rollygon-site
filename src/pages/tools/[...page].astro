---
import ContentCard from "@/components/ContentCard.astro";
import PageTitle from "@/components/layout/PageTitle.astro";
import Pagination from "@/components/Pagination.astro";
import SearchBar from "@/components/SearchBar.astro";

import SiteLayout from "@/layouts/SiteLayout.astro";

import { ALL_TOOLS } from "@/content/config";
import type { Page } from "astro";

interface Props {
	page: Page<any>;
}

export async function getStaticPaths({ paginate }: any): Promise<any> {
	return paginate(ALL_TOOLS, {
		pageSize: 10,
	});
}

const { page } = Astro.props;
---

<SiteLayout pageTitle="Tools" color="yellow" pattern="3">
	<div class="flex flex-col gap-4">
		<PageTitle heading="Tools" />
		<SearchBar />
	</div>
	<div class="flex flex-col gap-4">
		<h2>All tools</h2>
		<div class="flex flex-col gap-8">
			{page.data.map((content) => <ContentCard {content} />)}
		</div>
	</div>
	<Pagination {page} content={ALL_TOOLS} />
</SiteLayout>
