---
import ContentCard from "@/components/ContentCard.astro";
import { ALL_POSTS } from "@/content/config";
import ContentPageLayout from "@/layouts/ContentPageLayout.astro";
import SiteLayout from "@/layouts/SiteLayout.astro";

export async function getStaticPaths() {
	return ALL_POSTS.map((post, index) => ({
		params: {
			slug: post.slug,
		},
		props: { post, index },
	}));
}

const { post, index } = Astro.props;
const { Content } = await post.render();

function setPostIndex(): number {
	if (index + 1 >= ALL_POSTS.length) {
		return 0;
	}

	return index + 1;
}
---

<SiteLayout pageTitle={post.data.title} color="neutral" pattern="3">
	<ContentPageLayout content={post} contentCollection={ALL_POSTS} {index}>
		<Content />
	</ContentPageLayout>
	<div class="flex flex-col gap-8">
		<h2>Next post</h2>
		<ContentCard content={ALL_POSTS[setPostIndex()]} />
	</div>
</SiteLayout>
