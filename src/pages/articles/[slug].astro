---
import { ALL_ARTICLES } from "@/content/config";
import ContentPageLayout from "@/layouts/ContentPageLayout.astro";
import SiteLayout from "@/layouts/SiteLayout.astro";

export async function getStaticPaths() {
	return ALL_ARTICLES.map((article) => ({
		params: {
			slug: article.slug,
		},
		props: { article },
	}));
}

const { article } = Astro.props;
const { Content } = await article.render();
---

<SiteLayout pageTitle={article.data.title}>
	<ContentPageLayout content={article}>
		<Content />
	</ContentPageLayout>
</SiteLayout>
