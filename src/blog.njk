---
layout: "/layouts/base.njk"
title: "Blog"
---

<ul class="post__list">
    {%- for post in collections.post | reverse-%}
    <li class="post__item">
        <a class="post__title" href="{{ post.url }}">{{ post.data.title }}</a>
        <span class="post__info">{{ post.rawInput | timeToRead }} &bullet; {{ post.date | postDate }}</span>
    </li>
    {%- endfor -%}
</ul>