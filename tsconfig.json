{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist", "src/content/drafts/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/ui/*": ["src/components/ui/*"],
      "@/layout/*": ["src/components/layout/*"],
      "@/icons/*": ["src/components/icons/*"]
    }
  }
}
